   "source": [
    "# Agentic Maintenance Planner\n",
    "## OpenEnv + Unsloth + TRL PPO (Colab-first)"
   ]
  },
  {
   "cell_type": "code",
   "source": [
    "!pip install -r ../requirements.txt"
   ]
  },
  {
   "cell_type": "code",
   "source": [
    "from unsloth import FastLanguageModel\n",
    "from trl import PPOTrainer, PPOConfig\n",
    "from transformers import AutoTokenizer\n",
    "from environment.openenv_maintenance_env import MaintenancePlannerEnv"
   ]
  },
  {
   "cell_type": "code",
   "source": [
    "model, tokenizer = FastLanguageModel.from_pretrained(\n",
    "    model_name='meta-llama/Llama-3-8B-Instruct',\n",
    "    load_in_4bit=True,\n",
    "    max_seq_length=2048,\n",
    ")"
   ]
  },
  {
   "cell_type": "code",
   "source": [
    "ppo_config = PPOConfig(batch_size=1, learning_rate=1e-5)\n",
    "trainer = PPOTrainer(config=ppo_config, model=model, tokenizer=tokenizer)"
   ]
  },
  {
   "cell_type": "code",
   "source": [
    "env = MaintenancePlannerEnv()\n",
    "obs, _ = env.reset()\n",
    "for step in range(10):\n",
    "    prompt = f'Asset health is {obs["asset_health"]}. What should I do?'\n",
    "    inputs = tokenizer(prompt, return_tensors='pt')\n",
    "    action = 0 if obs['asset_health'] < 70 else 1\n",
    "    obs, reward, done, _, _ = env.step(action)\n",
    "    trainer.step([prompt], [inputs['input_ids']], [reward])"
   ]
  }
